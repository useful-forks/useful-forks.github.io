{
  "name": "Useful Forks",
  "version": "1.6",
  "description": "Displays GitHub forks ordered by stars, with additional information and automatic filtering of irrelevant ones.",
  "permissions": [
    "*://github.com/*",
    "*://api.github.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/*"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "useful-forks.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "manifest_version": 2
}
